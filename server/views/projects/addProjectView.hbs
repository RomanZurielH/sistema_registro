<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2">
    <div class="card">
      <div class="card-image">
        <img src="/images/project.png" alt="project image" />
        <span class="card-title">
          Registrar Proyecto
        </span>
      </div>
      <form autocomplete="off" action="/projects/add" method="POST">
        <div class="card-content">
          <div class="input-field">
            <label for="project-name">
              Nombre
            </label>
            <input
              placeholder="Ingrese el nombre del proyecto"
              type="text"
              id="project-name"
              name="name"
              class="validate"
              value="{{project.name}}"
              required
            />
            <span
            class="helper-text"
            data-error="Debe de ingresar un nombre para el proyecto"
            data-success="Correcto"></span>
            {{#if
            errorModel.nameError}}
            <span style="color:red">Error:
              {{errorModel.nameError}}
            </span>
            {{/if}}
          </div>
          <div class="input-field">
            <label for="project-description">
              Descripción
            </label>
            <textarea
              name="description"
              id="project-description"
              class="materialize-textarea"
              required
            ></textarea>
            {{project.description}}
            <span
            class="helper-text"
            data-error="Debe ingresar la descripción al proyecto"
            data-success="Correcto"></span>
            {{#if errorModel.descriptionError}}
            <span style="color:red"> 
              Error: {{errorModel.descriptionError}}
            </span>
            {{/if}} 
          </div>
        </div>
        <div class="card-action">
          <button
            type="submit"
            class="black darken-3 waves-effect waves-light btn"
          >
            <i class="material-icons left">
              save
            </i>
            Registrar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>